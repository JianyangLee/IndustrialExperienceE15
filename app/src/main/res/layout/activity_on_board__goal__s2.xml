<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard2"
    tools:context=".OnBoard_Goal_S2">

    <ImageView
        android:id="@+id/imageViewUserGoal"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/user_target" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewUserGoal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/whatIsYourGoal"
        android:textSize="25dp" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="414dp"
        tools:layout_editor_absoluteY="158dp">

        <RadioButton
            android:id="@+id/radio_Weight_Loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:checked="true"
            android:paddingTop="2dp"
            android:text="@string/weightLossOption"
            android:textSize="25dp" />

        <!-- android:onClick="onRadioButtonClicked"/> -->

        <RadioButton
            android:id="@+id/radio_Weight_Maintain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingTop="2dp"
            android:text="@string/weightMaintainOption"
            android:textSize="25dp" />

        <!-- android:onClick="onRadioButtonClicked"/> -->
        <RadioButton
            android:id="@+id/radio_Weight_Gain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingTop="2dp"
            android:text="@string/weightGainOption"
            android:textSize="25dp" />

    </RadioGroup>


    <Button
        android:id="@+id/S2PreviousButton"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_goal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:paddingRight="10dp"
        android:text="@string/buttonPrevious"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="47dp"
        android:background="@drawable/transparent_bg_bordered_button"
        tools:layout_editor_absoluteY="502dp" />

    <Button
        android:id="@+id/S2Nextbutton"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_goal"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="100dp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/S2PreviousButton"
        android:text="@string/buttonNext"
        tools:layout_editor_absoluteX="291dp"
        android:background="@drawable/transparent_bg_bordered_button"
        tools:layout_editor_absoluteY="502dp" />
</RelativeLayout>