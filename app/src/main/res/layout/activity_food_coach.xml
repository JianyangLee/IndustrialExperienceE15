<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewforTimeOfTheDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCaloriesLeftForTheDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewforTimeOfTheDay"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:inputType="textMultiLine"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mostCountSportsPrompt"
        android:layout_width="150dp"
        android:layout_height="57dp"
        android:layout_below="@+id/textViewCaloriesLeftForTheDay"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:text=""
        android:textSize="25dp" />

    <TextView
        android:id="@+id/mostCountSportsRecommendPrompt"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_below="@+id/textViewCaloriesLeftForTheDay"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/mostDurationOfSportsPrompt"

        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:textSize="25dp" />


    //2nd Row

    <TextView
        android:id="@+id/mostDurationOfSportsPrompt"
        android:layout_width="150dp"
        android:layout_height="57dp"
        android:layout_below="@+id/mostCountSportsRecommendPrompt"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:text=""
        android:textSize="25dp" />

    <TextView
        android:id="@+id/mostDurationOfSportsValuePrompt"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_below="@+id/mostCountSportsRecommendPrompt"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/mostDurationOfSportsPrompt"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:textSize="25dp" />


    <Button
        android:id="@+id/Btn_To_Dashboard_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCaloriesLeftForTheDay"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:gravity="center"
        android:text="Recommend New"
        android:textColor="#FFFFFF"

        />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />
    </LinearLayout>

    <!-- -->
</RelativeLayout>

