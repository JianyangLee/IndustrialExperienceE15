    <TextView
        android:id="@+id/mostCountSportsPrompt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:text=""
        android:gravity="center_horizontal"
        android:inputType="textMultiLine"
        android:textSize="25dp" />


    //2nd Row

    <ImageView
        android:id="@+id/imageView_GoogleSearch"
        android:layout_width="366dp"
        android:layout_height="125dp"
        android:layout_below="@+id/mostCountSportsPrompt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp" />

    <ScrollView
        android:layout_below="@+id/imageView_GoogleSearch"
        android:layout_width="match_parent"
        android:id="@+id/Scroll_View"
        android:layout_height="200dp">
    <TextView
        android:id="@+id/textView_GoogleSearchResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
         />
    </ScrollView>

    <Button
        android:id="@+id/btn_Take_Me_There"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Scroll_View"
        android:textColor="#FFFFFF"
        android:background="@drawable/transparent_bg_bordered_button"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="Dashboard"

        />
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="1"
        android:orientation="horizontal">
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />
    </LinearLayout>

